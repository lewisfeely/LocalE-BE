{
  "compilerOptions": {
    "module": "node16",
    "target": "ES2020",
    "types": [],

    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}
